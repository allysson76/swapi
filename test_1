const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('testa as informações de algum filme', async () => {
    const answer = await request('https://swapi.dev/api').get('/films/6') //films/6 - 'Revenge of the Sith'

    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se a quantidade de pessoas é maior que 30
    expect(answer.body.characters.length).toBeGreaterThan(30);

    // Verifica se o nome está correto
    expect(answer.body.director).toBe('George Lucas');
});