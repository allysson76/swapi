const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('testa as informações de alguma nave', async () => {
    const answer = await request('https://swapi.dev/api').get('/starships/10') //starships/10 - Millennium Falcon
    
    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se o comprimento na nave
    expect(answer.body.length).toBe('34.37');

    // Verifica se a quantidade de filmes em que apareceu
    expect(answer.body.films.length).toBe(3);
});