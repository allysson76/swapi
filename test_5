const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('testa as informações de algum planeta', async () => {
    const answer = await request('https://swapi.dev/api').get('/planets/10') //planets/10 - Kamino
    
    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se o tipo do planeto
    expect(answer.body.terrain).toBe('ocean');

    // Verifica se o nome está correto
    expect(answer.body.name).toBe('Kamino');
});