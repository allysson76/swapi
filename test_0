const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('testa as informações de cadastro, buscando pelo Obi-Wan Kenobi', async () => {
    const answer = await request('https://swapi.dev/api').get('/people/10') //people/10 - Obi-Wan Kenobi

    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se a quantidade de veículos é igual a 1
    expect(answer.body.vehicles.length).toBe(1);

    // Verifica se o nome está correto
    expect(answer.body.name).toBe('Obi-Wan Kenobi');

});