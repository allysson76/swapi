const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('Verifica informações de droids', async () => {
    const answer = await request('https://swapi.dev/api').get('/species/2') //species/2 - Droid
    
    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se a quantidade de veículos é igual a 1
    expect(answer.body.hair_colors).toBe('n/a');

    // Verifica se o nome está correto
    expect(answer.body.average_lifespan).toBe('indefinite');
});