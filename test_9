const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('Verifica informações do planta Dagoba', async () => {
    const answer = await request('https://swapi.dev/api').get('/planets/5') //planets/5 - Dagoba
    
    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se a quantidade de veículos é igual a 1
    expect(answer.body.terrain).toBe('swamp, jungles');

    // Verifica se o nome está correto
    expect(answer.body.population).toBe('unknown');
});