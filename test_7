const request = require('supertest');

// https://swapi.dev/api
// /people/1...
// /films/1...
// /species/1...
// /vehicles/1...
// /starships/1...
// /planets/1...

test('Verifica se retorna verdadeiro pelo C-3PO ter participado de todos osfilmes', async () => {
    const answer = await request('https://swapi.dev/api').get('/people/2') //people/2 - C-3PO

    // Verifica se o status de requisição está retornando verdadeiro
    expect(answer.status).toBe(200);

    // Verifica se a quantidade de veículos é igual a 1
    expect(answer.body.films.length).toBe(6);
});